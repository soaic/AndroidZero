<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.soaic.widgetlibrary.bannerview.BannerView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dotGravity="center"
        app:dotIndicationBg="#50000000"
        app:dotFocusIndicatorView="#FF0000"
        app:dotNormalIndicatorView="#FFFFFF"
        app:dotDistance="8dp"
        app:dotSize="8dp"
        app:widthProportion="8"
        app:heightProportion="3"/>

    <com.soaic.widgetlibrary.widget.TrackTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1111111"
        android:textSize="20sp"
        android:textColor="#000000"
        app:changeColor="@color/colorAccent"
        android:visibility="visible"/>
</LinearLayout>