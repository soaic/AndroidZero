<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BannerView">
        <!-- 点的选中颜色 -->
        <attr name="dotFocusIndicatorView" format="color|reference"/>
        <!-- 点的默认颜色 -->
        <attr name="dotNormalIndicatorView" format="color|reference"/>
        <!-- 点的摆放位置 -->
        <attr name="dotGravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="-1"/>
            <enum name="right" value="1"/>
        </attr>
        <!-- 点指示器的背景颜色 -->
        <attr name="dotIndicationBg" format="reference|color"/>
        <!-- 点的间距 -->
        <attr name="dotDistance" format="dimension"/>
        <!-- 点的大小 -->
        <attr name="dotSize" format="dimension"/>
        <!-- 图片宽高比 -->
        <attr name="widthProportion" format="integer"/>
        <attr name="heightProportion" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TrackTextView">
        <attr name="changeColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="visibleNumbers" format="integer"/>
    </declare-styleable>

    <declare-styleable name="QQStepView">
        <attr name="outerColor" format="color"/>
        <attr name="innerColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="stepTextSize" format="dimension" />
        <attr name="stepTextColor" format="color" />
    </declare-styleable>
</resources>